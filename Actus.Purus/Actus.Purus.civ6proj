    <Folder Include="Core" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="Core\Code.sql">
      <SubType>Content</SubType>
    </Content>
  </ItemGroup>
  <Import Project="$(MSBuildLocalExtensionPath)Civ6.targets" />
</Project>